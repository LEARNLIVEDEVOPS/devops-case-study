#!/bin/groovy

def dockerImg

pipeline {
    agent any
    stages {
        stage ('clone repo') {
            steps {
                /* Clone git Repository */
                checkout scm
            }
        }

        stage ('package app') {
            steps {
                /* Package Application using maven */
                sh 'mvn package'
            }
        }

        stage ('test package') {
            steps {
                /* test application using maven */
                sh 'mvn test'
            }
        }
    }
}
