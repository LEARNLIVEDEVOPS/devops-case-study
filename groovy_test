#!/bin/groovy

def dockerImg

pipeline {
    agent any
    stages {
        stage ('clone repo') {
            steps {
                /* Clone git Repository */
                checkout scm
            }
        }

        stage ('test package') {
            steps {
                /* test application using maven */
                sh 'mvn test'
            }
            post {
                always {
                /* Perform JUnit testing
                * sh './gradlew check' */
                    archiveArtifacts "target/**/*"
                    junit '**/target/*-reports/TEST-*.xml'
                }
            }
        }
        
        stage ('package app') {
            steps {
                /* Package Application using maven */
                sh 'mvn package'
            }
        }
        
        stage ('sonarqube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }
}
