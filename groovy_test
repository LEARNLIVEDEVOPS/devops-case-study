#!/bin/groovy

def dockerImg

pipeline {
    agent any
    stages {
        stage ('clone repo') {
            steps {
                /* Clone git Repository */
                checkout scm
            }
        }

        stage ('package app') {
            steps {
                /* Package Application using maven */
                def mvnHome =  tool name: 'maven', type: 'maven'
                sh "${mvnHome}/bin/mvn package"
            }
        }

        stage ('test package') {
            steps {
                /* test application using maven */
                def mvnHome =  tool name: 'maven', type: 'maven'
                sh "${mvnHome}/bin/mvn test"
            }
        }
    }
}

